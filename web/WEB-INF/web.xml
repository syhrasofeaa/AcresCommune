    </servlet>
    <servlet>
        <servlet-name>UpdateEquipmentServlet</servlet-name>
        <servlet-class>equipments.controller.UpdateEquipmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadProfileServlet</servlet-name>
        <url-pattern>/ReadProfileServlet</url-pattern>
    </servlet-mapping>
